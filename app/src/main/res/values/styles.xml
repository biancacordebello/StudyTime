<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="ImageStudent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:background">@color/lilac</item>

    </style>

    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignBottom">@id/center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginHorizontal">40dp</item>

    </style>

    <style name="Checkbox">
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignBottom">@id/start</item>
        <item name="android:buttonTint">#FFFF</item>
        <item name="android:checkMarkTint">@color/navy</item>
        <item name="android:radius">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>



    </style>

    <style name="Login_text">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>